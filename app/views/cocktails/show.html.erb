<div class="container">
  <h1><%= @cocktail.name %></h1>
    <div class="row">
      <div class="col-sm-12 col-md-6">
        <h3>Recipe:</h3>
        <ul>
          <% @cocktail.doses.each do |dose| %>
          <li>Ingredient - <%= dose.ingredient.name %></li>
          <li>Description - <%= dose.description %></li>
          <%= link_to "Remove dose", dose_path(dose), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger" %>
          <% end %>

        </ul>
      </div>
    </div>

<%= link_to "Add a new Dose", new_cocktail_dose_path(@cocktail), class: "btn btn-warning"%>
<%= link_to "Back to all cocktails", cocktails_path %>
</div>

